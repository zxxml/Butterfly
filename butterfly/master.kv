#:kivy 1.10.1

<Background@Button>
  size: self.parent.size

<MaskCanvas@Button>
  background_color: (0, 0, 0, 0)

<MasterWin>
  Background:
    background_color: (0, 0, 0, 1)
  Image:
    id:   img
    size: self.parent.size
    allow_stretch: True
  MaskCanvas:
    id:        mask
    size:      self.parent.size
    size_hint: (None, None)
    pos_hint:  {'center_x': 0.5, 'center_y': 0.5}
